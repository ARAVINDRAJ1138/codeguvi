#include <stdio.h>
int main()
{
    float num;
    printf("Enter a number: ");
    scanf("%f",&num);
    if (num<0)     
      printf("%f is negativ.",num);
    else if (num>0)   /* Checking whether num is greater than zero*/
      printf("%f is positive.",num);
    else
      printf("You entered zero.");
    return 0;
}
